{
  "name": "claude-code-discord-status",
  "version": "1.0.0",
  "description": "Show what Claude Code is doing as a Discord Rich Presence activity card",
  "type": "module",
  "bin": {
    "claude-discord-status": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' 'tests/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run typecheck && npm test && npm run build"
  },
  "keywords": [
    "claude",
    "discord",
    "rich-presence",
    "claude-code",
    "status"
  ],
  "author": "Bruno Jurkovic",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BrunoJurkovic/claude-code-discord-status.git"
  },
  "homepage": "https://github.com/BrunoJurkovic/claude-code-discord-status#readme",
  "bugs": {
    "url": "https://github.com/BrunoJurkovic/claude-code-discord-status/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist/",
    "src/hooks/"
  ],
  "dependencies": {
    "@clack/prompts": "^1.0.1",
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@xhayper/discord-rpc": "^1.3.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "eslint": "^9.20.0",
    "prettier": "^3.5.2",
    "tsup": "^8.4.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1",
    "vitest": "^3.0.5"
  }
}
